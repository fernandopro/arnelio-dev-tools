<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.6/phpunit.xsd"
    colors="true"
    verbose="true"
    stopOnFailure="false"
    testdox="true"
    bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="WordPress Integration">
            <directory>tests/integration</directory>
        </testsuite>
    </testsuites>
    
    <groups>
        <include>
            <group>WordPress</group>
        </include>
    </groups>
    
    <php>
        <!-- WordPress Test Suite Configuration -->
        <const name="WP_TESTS_PHPUNIT_POLYFILLS_PATH" value="vendor/yoast/phpunit-polyfills/phpunitpolyfills-autoload.php" />
        
        <!-- Test Environment -->
        <env name="WP_TESTS_DOMAIN" value="localhost" />
        <env name="WP_TESTS_EMAIL" value="admin@localhost" />
        <env name="WP_TESTS_TITLE" value="Dev-Tools WordPress Test Site" />
        
        <!-- Dev-Tools Testing -->
        <env name="DEV_TOOLS_TESTS_VERBOSE" value="true" />
        <env name="DEV_TOOLS_TESTING" value="true" />
        
        <!-- Server vars for testing -->
        <server name="SERVER_NAME" value="localhost" />
        <server name="HTTP_HOST" value="localhost" />
        <server name="REQUEST_METHOD" value="GET" />
        <server name="REQUEST_URI" value="/" />
    </php>
</phpunit>
