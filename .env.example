# =============================================
# Configuración de Ejemplo - Tarokina Pro Dev Tools
# =============================================
# Copia este archivo a .env.local y personaliza según tus necesidades

# =============================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================

# Modo de desarrollo (true/false)
TAROKINA_DEVELOPMENT_MODE=true

# Habilitar debug de WordPress
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# =============================================
# CONFIGURACIÓN DE TESTING
# =============================================

# Base de datos para tests
DB_TEST_NAME=tarokina_test
DB_TEST_USER=root
DB_TEST_PASSWORD=
DB_TEST_HOST=localhost

# WordPress Test Suite
WP_TESTS_DIR=/tmp/wordpress-tests-lib
WP_CORE_DIR=/tmp/wordpress/

# =============================================
# CONFIGURACIÓN DE WEBPACK
# =============================================

# Modo de compilación (development/production)
NODE_ENV=development

# Puerto para desarrollo
DEV_SERVER_PORT=3000

# =============================================
# CONFIGURACIÓN ESPECÍFICA DEL PLUGIN
# =============================================

# URL base del sitio (para tests de integración)
SITE_URL=http://localhost:10019

# Directorio del plugin (relativo a wp-content/plugins/)
PLUGIN_DIR=tarokina-2025

# =============================================
# RUTAS IMPORTANTES
# =============================================

# Estas rutas son detectadas automáticamente, pero puedes personalizarlas:
# TESTS_DIR=tests/
# DOCS_DIR=docs/
# SIMULATORS_DIR=simulators/
# BUILD_DIR=dist/

# =============================================
# CONFIGURACIÓN AVANZADA
# =============================================

# Habilitar análisis de bundle (true/false)
ANALYZE_BUNDLE=false

# Habilitar source maps en producción (true/false)
PRODUCTION_SOURCE_MAPS=false

# Cache de Webpack (true/false)
WEBPACK_CACHE=true
