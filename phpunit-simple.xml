<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.6/phpunit.xsd"
    colors="true"
    verbose="true"
    stopOnFailure="false"
    testdox="true"
    bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="simple">
            <file>tests/unit/MinimalTest.php</file>
            <file>tests/unit/SimpleTest.php</file>
        </testsuite>
    </testsuites>
    
    <groups>
        <include>
            <group>Quick</group>
        </include>
    </groups>
</phpunit>
