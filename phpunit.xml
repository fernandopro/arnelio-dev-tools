<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<!-- Suite de tests unitarios (rÃ¡pidos) -->
		<testsuite name="unit">
			<directory suffix="Test.php">./tests/unit/</directory>
		</testsuite>
		
		<!-- Suite de tests de integraciÃ³n (lentos) -->
		<testsuite name="integration">
			<directory suffix="Test.php">./tests/integration/</directory>
		</testsuite>
		
		<!-- Suite por defecto (todos los tests) -->
		<testsuite name="default">
			<directory prefix="test-" suffix=".php">./tests/</directory>
			<directory suffix="Test.php">./tests/unit/</directory>
			<directory suffix="Test.php">./tests/integration/</directory>
			<exclude>./tests/fixtures</exclude>
			<exclude>./tests/e2e</exclude>
			<exclude>./tests/coverage</exclude>
			<exclude>./tests/ci</exclude>
		</testsuite>
	</testsuites>
	
	<!-- Environment variables -->
	<php>
		<env name="WP_TESTS_DIR" value="./wordpress-develop/tests/phpunit" />
		<env name="WP_TESTS_CONFIG_FILE_PATH" value="./wp-tests-config.php" />
		<env name="WP_TESTS_MULTISITE" value="0" />
		<env name="WP_TESTS_DOMAIN" value="localhost" />
		<env name="WP_TESTS_EMAIL" value="admin@localhost.test" />
		<env name="WP_TESTS_TITLE" value="Dev-Tools Test Site" />
	</php>
</phpunit>
