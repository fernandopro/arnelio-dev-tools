{
    "name": "dev-tools/arquitectura-3.0",
    "description": "Dev-Tools Arquitectura 3.0 - Testing y desarrollo para WordPress",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Dev-Tools Arquitectura 3.0",
            "email": "dev@devtools.local"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "vendor-dir": "vendor"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "autoload": {
        "psr-4": {
            "DevTools\\": "includes/",
            "DevTools\\Modules\\": "modules/",
            "DevTools\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevTools\\Tests\\": "tests/"
        }
    }
}
