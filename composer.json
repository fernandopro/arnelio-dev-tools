{
    "name": "tarokina-pro/dev-tools",
    "description": "Herramientas de desarrollo para Tarokina Pro Plugin - Framework Oficial WordPress PHPUnit",
    "type": "wordpress-plugin",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "TarokinaPro\\\\DevTools\\\\Tests\\\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test-unit": "phpunit --configuration phpunit.xml --testsuite tarokina-unit-tests",
        "test-integration": "phpunit --configuration phpunit.xml --testsuite tarokina-integration-tests", 
        "test-coverage": "phpunit --configuration phpunit.xml --coverage-html coverage/",
        "setup-wp-tests": [
            "echo 'WordPress Core PHPUnit framework is ready to use'"
        ]
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
